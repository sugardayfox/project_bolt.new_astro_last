<section class="py-16 bg-primary text-white">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h2 class="text-3xl font-bold mb-4">Stay Updated</h2>
    <p class="text-xl text-gray-300 mb-8">Get weekly insights and discover new opportunities in your inbox.</p>
    
    <form id="newsletter-form" class="max-w-md mx-auto">
      <div class="flex flex-col sm:flex-row gap-4">
        <input
          type="email"
          placeholder="Enter your email"
          class="flex-1 px-4 py-3 rounded-lg text-gray-900 placeholder-gray-500 focus:ring-2 focus:ring-white focus:border-transparent"
          required
        />
        <button
          type="submit"
          class="bg-white text-primary px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors"
        >
          Subscribe
        </button>
      </div>
    </form>
  </div>
</section>

<script>
  const form = document.getElementById('newsletter-form');
  
  form?.addEventListener('submit', (e) => {
    e.preventDefault();
    const formData = new FormData(e.target as HTMLFormElement);
    const email = formData.get('email');
    
    // Here you would typically send this to your backend
    console.log('Newsletter signup:', email);
    alert('Thanks for subscribing! We\'ll be in touch soon.');
    (e.target as HTMLFormElement).reset();
  });
</script>